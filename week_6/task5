import matplotlib.pyplot as plt
import numpy as np
def f(x):
    if -5 <= x <= 5:
        return x * x
    elif x < -5:
        return 2 * abs(x) - 1
    else:
        return 2 * x
x = np.linspace(-10,10)
y = []
for i in range(len(x)):
   y.append(f(x[i]))
plt.plot(x,y,c='red', ls='', ms=5, marker='.')
plt.show()